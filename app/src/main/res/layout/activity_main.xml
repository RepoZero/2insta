<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smrahmadi.a2insta.activity.Main"
    android:orientation="vertical">


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp" />

    <eu.long1.spacetablayout.SpaceTabLayout
        android:id="@+id/spaceTabLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:number_of_tabs="five"
        app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
        app:icon_one="@drawable/person"
        app:icon_two="@drawable/direct"
        app:icon_three="@drawable/search"
        app:icon_four="@drawable/home"
        app:icon_five="@drawable/story"
        app:starting_position="one" />


</android.support.design.widget.CoordinatorLayout>
