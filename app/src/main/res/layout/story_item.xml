<?xml version="1.0" encoding="utf-8"?>
<com.smrahmadi.a2insta.xView.SquareLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center"
    android:background="@drawable/btn_search"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/story_item_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/story_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/txtSmallBold"
        android:lines="1"
        android:text="@string/name"/>

</com.smrahmadi.a2insta.xView.SquareLinearLayout>